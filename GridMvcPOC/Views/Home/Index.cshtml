@model ICollection<PayMaster.Framework.Model.OpCode>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}
<script src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")" type="text/javascript"> </script>
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
<h2>Index</h2>
@Html.Grid(Model).Columns(columns =>
           {
               columns.Add(foo => foo.OpcodeId).Titled("Opcode ID").Sortable(true);
               columns.Add(opcode => opcode.OpcodeName).Titled("Opcode Name").SetWidth(110);
           }).WithPaging(20).Filterable().WithMultipleFilters()